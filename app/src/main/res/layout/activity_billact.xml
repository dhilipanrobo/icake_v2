<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Billact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >



    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanks For Order"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#6B3E26"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/cname1"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cake Name:"
                    android:textStyle="italic"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/qty1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/tot_amt1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount Rs:"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/adv_amt1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Amount Rs:"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/pay_amt1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payable Amount Rs:"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/del_dat1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Date:"
                    android:textStyle="italic"
                    android:textSize="@dimen/_15sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cname"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textStyle="italic"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/qty"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/tot_amt"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/adv_amt"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/pay_amt"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/del_dat"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textStyle="italic"
                    android:textSize="@dimen/_15sdp"/>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/pri"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/pri"
            android:layout_gravity="center"
            android:text="Print"
            android:textSize="@dimen/_18sdp"
            android:textColor="#fff"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/_20sdp"
            />
        </LinearLayout>



</android.support.constraint.ConstraintLayout>